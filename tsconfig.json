{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "lib": ["esnext", "dom"],
    "paths": {
      "@": ["packages"],
      "@/*": ["packages/*"],
      "@doc/*": ["docs/*"],
    }
  },
  "include": [
    "packages/**/*",
    "docs/**/*",
    "docs/**/*.md"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
